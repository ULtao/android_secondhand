<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorMain"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="27dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/fanhui" />
        <TextView
            android:id="@+id/tv_publish_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/White"
            android:text="个人信息"
            android:layout_centerInParent="true"/>

        <!--刷新-->
        <ImageView
            android:id="@+id/tv_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/shuaxin"
            android:textColor="@color/colorWhite"
            android:textSize="22sp" />
    </RelativeLayout>

    <!--    <TextView-->
    <!--        android:id="@+id/tv_my_info"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:background="@color/colorGreenLight"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:text="个人信息"-->
    <!--        android:textColor="@color/colorGreen"-->
    <!--        android:textSize="40sp"-->
    <!--        android:textStyle="italic" />-->

    <TextView
        android:id="@+id/tv_stu_number"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_my_info"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:layout_marginStart="170dp"/>

    <TextView
        android:id="@+id/tv_stu_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="暂未填写"
        android:layout_marginStart="170dp"/>

    <TextView
        android:id="@+id/tv_stu_major"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="暂未填写"
        android:layout_marginStart="170dp"/>

    <TextView
        android:id="@+id/tv_stu_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="暂未填写"
        android:layout_marginStart="170dp"/>

    <TextView
        android:id="@+id/tv_stu_qq"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="暂未填写"
        android:layout_marginStart="170dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_qq"
        android:layout_marginStart="50dp"
        android:layout_marginTop="58dp"
        android:text="宿舍地址:"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_number"
        android:layout_marginStart="50dp"
        android:layout_marginTop="66dp"
        android:text="用户姓名:"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_major"
        android:layout_marginStart="50dp"
        android:layout_marginTop="68dp"
        android:text="联系方式:"
        android:textSize="25sp" />

    <TextView
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_phone"
        android:layout_marginStart="65dp"
        android:layout_marginTop="68dp"
        android:text="QQ号:"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_name"
        android:layout_marginStart="50dp"
        android:layout_marginTop="69dp"
        android:text="用户专业:"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="用户账号:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_stu_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_stu_qq"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="暂未填写"
        android:layout_marginStart="170dp"/>

    <Button
        android:id="@+id/btn_modify_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stu_address"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorMain"
        android:text="修改"
        android:textColor="@color/White"
        android:textSize="24sp" />

    <!--    <Button-->
    <!--        android:id="@+id/btn_back"-->
    <!--        android:layout_width="180dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/tv_stu_address"-->
    <!--        android:layout_marginStart="210dp"-->
    <!--        android:layout_marginTop="116dp"-->
    <!--        android:layout_marginEnd="10dp"-->
    <!--        android:background="@drawable/btn_cancel"-->
    <!--        android:text="返回"-->
    <!--        android:textSize="25sp" />-->
</RelativeLayout>
